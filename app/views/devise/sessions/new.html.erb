<head>
  <!-- Incluir Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Newsreader:wght@400;700&display=swap" rel="stylesheet">
</head>
<style>
  body {
    font-family: 'Newsreader', serif;
    background-color: #f8f8f8;
    margin: 0;
    padding: 0;
  }

  .login-container {
    text-align: center;
    margin-top: 50px;
  }

  h1 {
    font-size: 2em;
    color: #005f35;
    font-family: 'Newsreader', serif;
    font-weight: 700;
  }

  .login-box {
    display: inline-block;
    background-color: #e5f4e3;
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    width: 320px;
  }

  .login-logo {
    max-width: 100px;
    margin-bottom: 20px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-family: 'Newsreader', serif;
    font-size: 16px;
  }

  .btn-success {
    background-color:rgb(85, 133, 103);
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    width: 100%;
    font-family: 'Newsreader', serif;
    font-weight: 700;
  }

  .btn-success:hover {
    background-color:#29573c;
  }

  p {
    margin-top: 10px;
  }

  a {
    color: #005f35;
    text-decoration: none;
    font-family: 'Newsreader', serif;
  }

  a:hover {
    text-decoration: underline;
  }
</style>

<div class="login-container">
  <h1>Inicio de Sesión</h1>
  <div class="login-box">
    <img src="/assets/Logo_grande.svg" alt="Logo" class="login-logo">
    <%= form_with scope: :user, url: new_user_session_path, local: true do |f| %>
      <%= hidden_field_tag :role, @role %>
      <div class="form-group">
        <%= f.label :email, 'Email :' %>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "email@example.com" %>
      </div>
      <div class="form-group">
        <%= f.label :password, 'Contraseña :' %>
        <%= f.password_field :password, class: "form-control", placeholder: "********" %>
      </div>
      <div class="form-group">
        <%= f.submit 'INICIAR SESIÓN', class: "btn-success" %>
      </div>
    <% end %>
    <p><%= link_to "¿Olvidaste tu contraseña?", "#" %></p>
  </div>
</div>
