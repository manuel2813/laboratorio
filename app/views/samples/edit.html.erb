<h1 class="text-center text-primary mb-4">Editar Muestra</h1>

<div class="container mt-4 shadow-lg p-5 bg-light rounded">
  <% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= flash[:notice] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= flash[:alert] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <% if @sample.errors.any? %>
    <div class="alert alert-danger">
      <h4>Errores:</h4>
      <ul>
        <% @sample.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @sample, local: true, class: "needs-validation" do |form| %>
    <!-- Código -->
    <div class="mb-4">
      <%= form.label :code, 'Código de la Muestra', class: "form-label fw-bold text-dark" %>
      <%= form.text_field :code, class: "form-control border-primary", placeholder: 'Ejemplo: M001' %>
    </div>

    <!-- Resultados -->
    <div class="mb-4">
      <%= form.label :results, 'Resultados', class: "form-label fw-bold text-dark" %>
      <%= form.text_area :results, class: "form-control border-primary", placeholder: 'Describe los resultados...' %>
    </div>

    <!-- Cliente -->
    <div class="mb-4">
      <%= form.label :user_id, 'Asignar a Cliente', class: "form-label fw-bold text-dark" %>
      <%= form.collection_select :user_id, User.where(role: :cliente), :id, :email, { prompt: 'Seleccione un cliente' }, class: "form-select border-primary" %>
    </div>

    <!-- Servicio -->
    <div class="mb-4">
      <%= form.label :servicio_id, 'Asignar Servicio', class: "form-label fw-bold text-dark" %>
      <%= form.collection_select :servicio_id, Servicio.all, :id, :nombre, { prompt: 'Seleccione un servicio' }, class: "form-select border-primary" %>
    </div>

    <!-- Fecha de Recepción -->
    <div class="mb-4">
      <%= form.label :fecha_recepcion, 'Fecha de Recepción', class: "form-label fw-bold text-dark" %>
      <%= form.date_field :fecha_recepcion, class: "form-control border-primary" %>
    </div>

    <!-- Estado -->
    <div class="mb-4">
      <%= form.label :estado, 'Estado de la Muestra', class: "form-label fw-bold text-dark" %>
      <%= form.select :estado, [['Pendiente', 'pendiente'], ['Procesado', 'procesado']], {}, class: "form-select border-primary" %>
    </div>

    <!-- Fecha de Registro (estática) -->
<div class="mb-4">
  <label class="form-label fw-bold text-dark">Fecha de Registro</label>
  <input type="text" class="form-control border-secondary" value="<%= @sample.created_at.strftime("%d/%m/%Y %I:%M:%S %p") %>" disabled>
</div>

<!-- Última Actualización (dinámica) -->
<div class="mb-4">
  <label class="form-label fw-bold text-dark">Última Actualización</label>
  <input type="text" class="form-control border-secondary" id="live-updated-at" disabled>
</div>
    <!-- Botones -->
    <div class="text-center">
      <%= form.submit 'Actualizar Muestra', class: "btn btn-success px-4 py-2 fw-bold" %>
      <%= link_to 'Volver a la Lista', samples_path, class: "btn btn-secondary px-4 py-2 fw-bold ms-3" %>
    </div>
  <% end %>
</div>
<script>
  function actualizarFechaHora() {
    const ahora = new Date();
    const opciones = {
      year: "numeric",
      month: "2-digit",
      day: "2-digit",
      hour: "2-digit",
      minute: "2-digit",
      second: "2-digit",
      hour12: true
    };
    const fechaHoraFormateada = ahora.toLocaleString("es-PE", opciones);
    document.getElementById("live-updated-at").value = fechaHoraFormateada;
  }

  // Actualiza inmediatamente al cargar
  actualizarFechaHora();

  // Luego actualiza cada segundo
  setInterval(actualizarFechaHora, 1000);
</script>
