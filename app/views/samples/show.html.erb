<h1 class="text-center text-primary mb-4">Detalle de la Muestra</h1>

<div class="container shadow-lg p-5 bg-light rounded">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="row row-cols-1 row-cols-md-2 g-4">
    <div>
      <h5><strong>C√≥digo:</strong></h5>
      <p class="text-muted"><%= @sample.code %></p>
    </div>

    <div>
      <h5><strong>Nombre de la Muestra:</strong></h5>
      <p class="text-muted"><%= @sample.nombre_muestra.presence || "No registrado" %></p>
    </div>

    <div>
      <h5><strong>N√∫mero de Muestras:</strong></h5>
      <p class="text-muted"><%= @sample.numero_muestras.presence || "No especificado" %></p>
    </div>

    <div>
      <h5><strong>√Årea de An√°lisis:</strong></h5>
      <p class="text-muted"><%= @sample.area_analisis.presence || "No especificada" %></p>
    </div>

    <div>
      <h5><strong>Monto Pagado (S/.)</strong></h5>
      <p class="text-muted"><%= @sample.monto_pago.presence || "No registrado" %></p>
    </div>

    <div>
      <h5><strong>Recibo Caja N¬∞:</strong></h5>
      <p class="text-muted"><%= @sample.recibo_caja.presence || "No registrado" %></p>
    </div>

    <div>
      <h5><strong>Resultados:</strong></h5>
      <p class="text-muted"><%= @sample.results.presence || "Sin resultados registrados" %></p>
    </div>

    <div>
      <h5><strong>Laboratorista Responsable:</strong></h5>
      <p class="text-muted"><%= @sample.laboratorista&.email || "No especificado" %></p>
    </div>

    <div>
      <h5><strong>Fecha de Registro:</strong></h5>
      <p class="text-muted"><%= @sample.created_at.strftime("%d/%m/%Y %H:%M:%S") %></p>
    </div>

    <div>
      <h5><strong>√öltima Actualizaci√≥n:</strong></h5>
      <% if @sample.updated_at != @sample.created_at %>
        <p class="text-muted"><%= @sample.updated_at.strftime("%d/%m/%Y %H:%M:%S") %></p>
      <% else %>
        <p class="text-muted">Sin modificar</p>
      <% end %>
    </div>
  </div>

  <div class="text-center mt-5">
    <%= link_to 'Editar Muestra', edit_sample_path(@sample), class: "btn btn-warning px-4 py-2 fw-bold me-3" %>
    <%= link_to 'Volver a la Lista de Muestras', samples_path, class: "btn btn-secondary px-4 py-2 fw-bold" %>
  </div>

  <div class="text-center mt-4">
    <%= link_to "üìÑ Ver PDF", export_pdf_sample_path(@sample), class: "btn btn-outline-primary", target: "_blank" %>
  </div>
</div>
