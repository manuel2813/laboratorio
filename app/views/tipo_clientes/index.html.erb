<p style="color: green"><%= notice %></p>

<h1 style="text-align: center; color: #4b0082;">Tipos de Cliente</h1>

<div style="display: flex; flex-wrap: wrap; gap: 20px; justify-content: center;">
  <% @tipo_clientes.each do |tipo| %>
    <div style="background-color: #f4f4f4; padding: 20px; border-radius: 10px; width: 300px; box-shadow: 0 4px 10px rgba(0,0,0,0.1);">
      <p><strong>Nombre:</strong> <%= tipo.nombre %></p>
      <p><strong>Descripción:</strong> <%= tipo.descripcion %></p>

      <div style="margin-top: 10px;">
        <%= link_to "Ver", tipo_cliente_path(tipo), class: "btn btn-sm btn-primary" %>
        <%= link_to "Editar", edit_tipo_cliente_path(tipo), class: "btn btn-sm btn-warning" %>
        <%= link_to "Eliminar", tipo_cliente_path(tipo), method: :delete, data: { confirm: "¿Seguro?" }, class: "btn btn-sm btn-danger" %>
      </div>
    </div>
  <% end %>
</div>

<div style="text-align: center; margin-top: 20px;">
  <%= link_to "Nuevo Tipo de Cliente", new_tipo_cliente_path, class: "btn btn-success" %>
</div>

<div style="text-align: left; margin: 10px 0;">
  <%= link_to "← Volver al Panel del Gerente", gerente_dashboard_path, class: "btn btn-secondary" %>
</div>
